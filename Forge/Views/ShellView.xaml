                                <FC:ForgePackIcon Kind="abstract_016" Foreground="#DDFF8B00" />
                                <TextBlock Text="Miscellaneous" VerticalAlignment="Center" Margin="5,1,0,0" FontWeight="Normal" Foreground="#DDFFFFFF" />
                            </StackPanel>
                        </Button>
                        <Separator Margin="6,3" />
